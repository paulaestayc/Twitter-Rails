<%= form_with(model: tweet, local: true) do |form| %>
  <% if tweet.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>
      <ul>
      <% tweet.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <br/>
  <div class="field">
    <%= form.text_area :content, id: :tweet_content, :class => "form-control", rows: "5", placeholder:"¿Qué está pasando?"%>
  </div>
  <div class="actions text-right my-2">
   <%= form.submit "Twittear", :class => "btn btn-outline-primary" %>
  </div>  
  <span class="likes"> 
  <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="twitter-share-button" data-text="Proyecto Twitter Desafío Latam" data-hashtags="Tech #Code #Rails #DesafíoLatam" data-related="" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
  </span>
<% end %>